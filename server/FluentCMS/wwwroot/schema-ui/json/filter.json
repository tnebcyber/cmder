{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Filter",
  "properties": {
    "fieldName": {
      "minLength": 1,
      "title": "Attribute Name",
      "type": "string"
    },
    "operator": {
      "type": "string",
      "title": "Selection Mode",
      "description": "and - match all constraint, or - match any constraint",
      "enum": ["and","or"]
    },
    "omitFail":{
      "type":"boolean",
      "title": "Omit if resolve value fail"
    },
    "constraints": {
      "title": "Constraints",
      "type": "array",
      "format": "table",
      "minItems": 1,
      "items": {
        "$ref": "constraint.json"
      }
    }
  }
}
