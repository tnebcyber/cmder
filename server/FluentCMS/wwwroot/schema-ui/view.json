{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "View",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "default": ""
    },
    "settings": {
      "type": "object",
      "properties": {
        "view": {
          "type": "object",
          "properties": {
            "Entity": {
              "type": "string"
            },
            "Sorts": {
              "$ref": "sorts.json"
            },
            "Filters": {
              "$ref": "filters.json"
            },
            "Attributes": {
              "type": "array",
              "format": "table",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
