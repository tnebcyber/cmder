<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
        <UserSecretsId>a5afdf68-db24-42a3-bf96-6c4bf027de65</UserSecretsId>
        <IsPackable>true</IsPackable>
        <OutputType>Library</OutputType>
        <AssemblyName>FluentCms</AssemblyName>
        <PackageReadmeFile>readme.md</PackageReadmeFile>
        <LangVersion>13</LangVersion>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Confluent.Kafka" Version="2.6.1" />
        <PackageReference Include="DynamicExpresso.Core" Version="2.17.2" />
        <PackageReference Include="FluentMigrator.Runner.Postgres" Version="6.2.0" />
