    <PropertyGroup>
        <PackageReadmeFile>readme.md</PackageReadmeFile>
        <TargetFramework>net9.0</TargetFramework>
        <PackageId>FluentCMS</PackageId>
        <Version>0.2.8.1</Version>
        <Authors>Jason C</Authors>
        <Company>fluent-cms</Company>
        <Description>A headless CMS with GraphQL API and drag-and-drop page designer.</Description>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/fluent-cms/fluent-cms/tree/main/server/FluentCMS</PackageProjectUrl>
        <RepositoryUrl>https://github.com/fluent-cms/fluent-cms</RepositoryUrl>
        
        <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
        <!-- Add metadata to assembly -->
        <AssemblyTitle>$(PackageId)</AssemblyTitle>
        <AssemblyInformationalVersion>$(Version)</AssemblyInformationalVersion>
    </PropertyGroup>
   

</Project>